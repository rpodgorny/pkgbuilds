post_install() {
  ln -s /etc/webapps/piwik/config.ini.php /usr/share/webapps/piwik/config/

  chown -R http:http /usr/share/webapps/piwik
  chown -R http:http /etc/webapps/piwik
  chmod 600 /etc/webapps/piwik/*
}

post_upgrade() {
  chown -R http:http /usr/share/webapps/piwik
  chown -R http:http /etc/webapps/piwik
  chmod 600 /etc/webapps/piwik/*
}
