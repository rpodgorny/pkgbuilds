# Maintainer: Radek Podgorny <radek@podgorny.cz>
pkgname='atxmonc-git'
provides='atxmonc'
conflicts='atxmonc'
pkgver=r16.db5f0e2
pkgrel=3
pkgdesc="AtxMon client"
arch=('any')
url="https://github.com/rpodgorny/atxmonc"
#license=('PSF')
depends=('python' 'python-docopt' 'python-requests')
makedepends=('git')
#options=(!emptydirs)
backup=('etc/atxmonc/atxmonc.conf' 'etc/atxmonc/probes.conf')
source=("$pkgname::git+https://github.com/rpodgorny/atxmonc")
md5sums=('SKIP')

pkgver() {
	cd "$srcdir/$pkgname"
	printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
	cd "$srcdir/$pkgname"
	python setup.py install --root="$pkgdir"/ --optimize=1

	install -d $pkgdir/usr/lib/systemd/system
	install -m 0644 etc/atxmonc.service $pkgdir/usr/lib/systemd/system/

	install -d $pkgdir/etc/atxmonc
	install -m 0644 atxmonc.conf $pkgdir/etc/atxmonc/
	install -m 0644 probes.conf $pkgdir/etc/atxmonc/
}
